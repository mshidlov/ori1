datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime   @default(now())
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  taskUsers TaskUser[]
  updatedAt DateTime   @updatedAt
  username  String     @unique
}

model Task {
  createdAt DateTime   @default(now())
  id        String     @id @default(cuid())
  taskUsers TaskUser[]
  updatedAt DateTime   @updatedAt
}

model TaskUser {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  task      Task?    @relation(fields: [taskId], references: [id])
  taskId    String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Test {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Tada {
  blaBlas   BlaBla[]
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model BlaBla {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tada      Tada?    @relation(fields: [tadaId], references: [id])
  tadaId    String?
  updatedAt DateTime @updatedAt
}